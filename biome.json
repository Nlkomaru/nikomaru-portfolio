{
    "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["**"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "includes": [
            "**",
            "!**/.next",
            "!**/node_modules",
            "!**/public",
            "!**/styled-system",
            "!**/app/src/components/ui/**",
            "!**/env.d.ts",
            "!**/worker-configuration.d.ts",
            "!**/storybook-static",
            "!**/.source"
        ],
        "lineWidth": 120
    },
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "includes": [
            "**",
            "!**/.next",
            "!**/node_modules",
            "!**/public",
            "!**/styled-system",
            "!**/app/src/components/ui/**",
            "!**/env.d.ts",
            "!**/worker-configuration.d.ts",
            "!**/storybook-static",
            "!**/routeTree.gen.ts",
            "!**/.source"
        ],
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error"
            },
            "suspicious": {
                "noConsole": { "level": "error", "options": { "allow": ["log"] } }
            }
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
